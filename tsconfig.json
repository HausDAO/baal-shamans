{
  "compilerOptions": {
    "types": [
      "chai",
      "node"
    ],
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "hardhat.config.ts",
    "deploy",
    "src/**/*",
    "tasks/**/*",
    "test/**/*"
  ]
}
